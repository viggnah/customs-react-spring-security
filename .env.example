# Environment Variables for Customs Management Application

# Database Configuration
DB_NAME=customs_management
DB_USER=customs_user
DB_PASSWORD=customs_password_2024

# Spring Profile (dev, staging, prod)
SPRING_PROFILE=dev

# JWT Configuration
JWT_SECRET=customs-management-jwt-secret-key-very-long-and-secure-2024
JWT_EXPIRATION=86400000

# Mail Configuration
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=noreply@customs.gov
MAIL_PASSWORD=your_email_password
MAIL_FROM=noreply@customs.gov

# Application Configuration
APP_NAME=Customs Management System
APP_VERSION=1.0.0
APP_FRONTEND_URL=http://localhost:3000

# Logging
LOG_LEVEL=INFO

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:3000,https://customs.gov

# File Upload
MAX_FILE_SIZE=10MB
MAX_REQUEST_SIZE=50MB

# Cache Configuration
CACHE_TTL=3600

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=100
